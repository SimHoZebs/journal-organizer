{
  "tasks": {
    "dev": "deno run npm:vite",
    "format": "deno fmt .",
    "lint": "deno lint .",
    "build": "deno run npm:tsc -b && deno run npm:vite build",
    "preview": "deno run npm:vite preview"
  },
  "permissions": {
    "env": true,
    "net": true,
    "read": true,
    "write": true
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "strict": true,
    "lib": ["dom", "dom.iterable", "ES2023"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "imports": {
    "react": "npm:react",
    "react-dom": "npm:react-dom",
    "react/jsx-runtime": "npm:react/jsx-runtime",
    "vite": "npm:vite"
  }
}
