{
  "name": "journal-organizer",
  "private": true,
  "version": "1.0.0",
  "description": "Journal organizer application",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "npm run build --workspace=frontend",
    "mongodb": "docker compose up -d mongodb",
    "mongodb:stop": "docker compose down",
    "setup:env": "test -f .env || cp .env.example .env",
    "setup": "npm run setup:env && npm install",
    "format": "biome format . --write",
    "lint": "biome lint .",
    "check": "biome check ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "concurrently": "^9.1.2"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.9",
    "cors": "^2.8.5",
    "react-router": "^7.2.0",
    "react-router-dom": "^7.2.0",
    "tailwindcss": "^4.0.9"
  }
}
